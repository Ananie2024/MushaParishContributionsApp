<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="400.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ananie.mushaParish.controllers.AddBECController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Form Title -->
      <Label fx:id="formTitleLabel" text="IMPUZA NSHYA" style="-fx-font-weight: bold;">
         <font>
            <Font name="Abyssinica SIL" size="18.0" />
         </font>
      </Label>
      
      <!-- Name Input -->
      <VBox spacing="5">
         <children>
            <Label text="Izina ry'Impuza:" />
            <TextField fx:id="nameTextField" prefWidth="300.0" promptText="Andika izina ry'impuza..." />
         </children>
      </VBox>
      
      <!-- SubParish Selection -->
      <VBox spacing="5">
         <children>
            <Label text="Santarali:" />
            <ComboBox fx:id="subParishComboBox" prefWidth="300.0" promptText="Hitamo santarali..." />
         </children>
      </VBox>
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button fx:id="saveButton" prefWidth="80.0" text="Bika" />
            <Button fx:id="cancelButton" prefWidth="80.0" text="Bireke" />
         </children>
      </HBox>
      
      <!-- Status Label -->
      <Label fx:id="statusLabel" text="" style="-fx-font-weight: bold;" />
   </children>
</VBox>